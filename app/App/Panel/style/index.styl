.panel
  #panelPush
    right 0

#panelPush
  position absolute
  right -365px
  bottom 0
  top 0px
  width 360px
  transition standard

#panel
  position absolute
  top 0
  right 0
  bottom 0px
  width 420px
  -webkit-app-region no-drag
  display flex
  flex-direction column
  justify-content center
  align-items center
  transition .62s cubic-bezier(1, 0, 0, 1.1) all
  will-change transform

.panelSwoop
  position absolute
  display flex
  align-items flex-end
  top -1930px
  right -50px
  left -50px
  height 1500px
  opacity 0.3
  color spacewhite
  // z-index 99999999999999
  pointer-events none

.panelSwoopBottom
  position absolute
  display flex
  align-items flex-end
  bottom 750px
  right -50px
  left -50px
  height 1200px
  opacity 0.2
  color spacewhite
  // z-index 99999999999999
  pointer-events none

.panelRequest
  width 100%
  padding 10px
  display flex
  justify-content center
  align-items center
  flex-direction column

  .panelRequestBlock
    padding 10px 15px
    margin 15px
    border-radius 3px
    background white
    font-size 14px
    font-weight bold

.panelRequestGrant
  margin-top 40px
  padding-top 0px
  width 100%

.panelRequestGrantOption
  margin 15px
  padding 0px
  height 40px
  border-radius 20px
  display flex
  justify-content center
  align-items center
  background rgba(0, 0, 0, 0.08)
  -webkit-app-region no-drag

  &:hover
    background rgba(0, 0, 0, 0.78)

#panelTop
  position absolute
  top 0
  right 0
  left 0
  height 0

.panelBot
  padding 10px 10px 60px 10px
  display flex
  justify-content center
  margin-left 5px

  svg
    color rgba(0, 0, 50, 0.1)

@import '../Main/style'
@import '../Local/style'
@import '../Notify/style'
@import '../Badge/style'
