.accountStatusIndicator
  position absolute
  top 0px
  left 0px
  height 32px
  width 32px
  border-radius 16px
  display flex
  justify-content center
  align-items center
  color outerspace08
  transition standard
  box-shadow 0px 3px 4px thick0
  border 1px solid thick
  background rgba(255, 255, 255, 0.75)

